<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="35dp"
    app:cardBackgroundColor="#f0f0f0"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"

            android:orientation="horizontal">

            <ImageView
                android:id="@+id/br_icon"
                android:layout_width="46dp"
                android:layout_height="52dp"
                android:layout_marginRight="@dimen/text_margin"

                android:src="@drawable/ic_pc" />

            <TextView
                android:id="@+id/br_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginVertical="@dimen/text_margin"
                android:layout_marginTop="36dp"
                android:fontFamily="@font/latobold"
                android:paddingTop="23dp"
                android:text="Programmes"
                android:textColor="@color/textColor"
                android:textSize="@dimen/title_size" />
        </LinearLayout>
        <TextView
            android:id="@+id/br_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="18dp"
            android:textColor="#000000"
            android:fontFamily="@string/light"
            android:justificationMode="inter_word"
            android:text="@string/about_college"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:src="@drawable/ic_left_right"
            android:layout_marginTop="@dimen/text_margin"/>


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>